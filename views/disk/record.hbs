<h1 class='record-title'><strong>{{title}}</strong></h1>

<div class="container ">

    <div class="row">

        <div class="col-4">
            <article class="artist-container">
                <img src="{{images.0.resource_url}}" alt="Album photo">

            </article>

        </div>
        <div class="col-4">
            <article>
                <p>Title: {{title}}</p>
                <p>Artist:{{#each artists}} {{name}} {{/each}}</p>
                <p>Genres:{{#each genres}} {{this}} {{/each}}</p>
                <p>Released: {{released_formatted}}</p>
                <p>Labels: {{#each labels}} | {{name}} | {{/each}}</p>
                <p>Country: {{country}}</p>
                <p>Formats: {{#each formats}} {{name}} {{/each}}</p>
            </article>
        </div>
        <div class="col-4">
            <article>
                    <button href="/record/addcollection/{{this.id}}" type="button" class="btn btn-primary">Add to Collection</button>
                    <button type="button" class="btn btn-primary">Add to Wishlist</button>
                    <br><br>
                    <h3>Track List</h3>
                {{#each tracklist}}
                <ul>
                    <li>{{title}} {{duration}}</li>
                </ul>
                {{!-- <p>{{title}} {{duration}}</p> --}}
                {{/each}}
            </article>

        </div>

    </div>
    <div class="row">
        <div class="col-12 align-self-center">
            <br><br>
            <p>Notes: {{notes}}</p>
        </div>

         <iframe class="col-3 align-self-center " id="ytVideo" width="420" height="315"
src="{{videos.0.uri}}">
</iframe> 
    </div>

    <form  action="/record/addcollection" method="post">

        <input class="invForm" type="number" id="DiscId" name='DiscId' value="{{id}}">

        <input  class="invForm" type="text"  id="image" name='image' value="{{images.0.resource_url}}">

        <input class="invForm" type="text" id="title" name='title' value="{{title}}">

        <a href='#'><button type="submit" class="btn btn-dark">Add to Collection</button></a>

    </form>

    <form  action="/record/addwishlist" method="post">

        <input class="invForm" type="number" id="DiscId" name='DiscId' value="{{id}}">

        <input  class="invForm" type="text"  id="image" name='image' value="{{images.0.resource_url}}">

        <input class="invForm" type="text" id="title" name='title' value="{{title}}">

        <a href='#'><button type="submit" class="btn btn-dark">Add to Wishlist</button></a>

    </form>








